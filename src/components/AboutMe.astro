---
import { getCollection } from 'astro:content'
import Tag from '@components/Tag.astro'
const info = await getCollection('aboutme')
const stackItems = await getCollection('techstack')
---
<section id="about-me">
    <div class="md:max-w-3/4 flex flex-col items-center justify-center p-6 mb-5">
        <h2 class="text-2xl font-semibold mb-4">About Me</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {info.map((item) => (
                <div class="flex flex-col items-center justify-center">
                    <h3 class="text-xl italic mb-2">{item.data.name}</h3>
                    <p class="text-wrap">{item.body}</p>
                </div>
                <div class="flex flex-col items-center justify-center">
                    <img src={item.data.img} alt={item.data.name + " image"} class="mt-4 min-w-1/4 max-w-1/2" />
                </div>
            ))}
        </div>
    </div>
  <div class="relative w-full md:max-w-3/4 max-h-50 px-6 mb-6">
    <div
      id="slider"
      class="flex-wrap flex flex-row gap-4 justify-center"
    >
      {stackItems.map((item) => (
        <div
          onmouseenter={`showDialog("${item.data.name}","${item.data.level}" ,\`${item.body}\`)`}
          onmouseleave="hideDialog()"
        >
          <Tag
            name={item.data.name}
            color={item.data.color ?? 'gray'}
            width="w-32"
            height="h-8"
          />
        </div>
      ))}
    </div>
  </div>
    <dialog
    id="tagDialog"
    class="relative w-full md:max-w-3/4 p-6 border"
    >
    </dialog>
</section>

<style>
    section {
        display:flex;
        flex-direction:column;
        align-items:center;
        justify-content:center;
        width: 100%;
    }
</style>

<script type="module">
  const dialog = document.getElementById("tagDialog");

  window.showDialog = (title, level, body) => {
    dialog.innerHTML = `
    <div class="flex flex-row align-center justify-between gap-4 align-center">
      <div class="items-start justify-start">
        <h3 class="text-lg font-semibold text-start">${title}</h3>
      </div>
      <div class="items-center justify-center">
        <p class="text-center">${level}</p>
      </div>
      <div class="items-end justify-end">
        <p class="text-end">${body}</p>
      </div>
    </div>
    `;
    dialog.show();
  };

  window.hideDialog = () => {
    dialog.close();
  };
</script>