---
export interface Props{
    title: string;
    description: string;
    url: string;
}
const { title, description, url }: Props = Astro.props;
---
<a href={url} target="_blank" rel="noopener noreferrer">
    <button type="button">
        <h1>{title}</h1>
        <p>{description}</p>
        <p>{url}</p>
    </button>
</a>
<style>
    a {
        text-decoration:none;
    }
    button {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;
        width: 100%;
        height: 100%;
        padding: 1rem;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.3s;
    }
</style>