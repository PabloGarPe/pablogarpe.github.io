<header class="mt-3 w-full min-height-16 flex flex-col justify-cneter items-center gap-1.5 lg:gap-0 lg:grid lg:grid-cols-3 sticky bg-bottom top-0 z-10 transition-all duration-300">
    <div class="flex items-start lg:pl-5">
        <img src="/icon.svg" alt="Logo" class="w-12 h-12" />
    </div>
    <div class="flex items-center justify-center">
        <div class="inline-block">
                    <h1 class="text-2xl font-bold">Pablo Garc√≠a - Software Developer</h1>
        </div>
    </div>
    <div class="flex items-end justify-end lg:pr-5">
        <nav>
            <ul class="flex space">
                <li class="mx-2">
                    <button id="theme-selector" class="max-w-6 cursor-pointer">
                        <svg width="30" height="30" class="hidden dark:inline">
                        <circle cx="15" cy="15" r="6" fill="currentColor" />

                        <line
                        id="ray"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        x1="15"
                        y1="1"
                        x2="15"
                        y2="4"
                        ></line>

                        <use href="#ray" transform="rotate(45 15 15)" />
                        <use href="#ray" transform="rotate(90 15 15)" />
                        <use href="#ray" transform="rotate(135 15 15)" />
                        <use href="#ray" transform="rotate(180 15 15)" />
                        <use href="#ray" transform="rotate(225 15 15)" />
                        <use href="#ray" transform="rotate(270 15 15)" />
                        <use href="#ray" transform="rotate(315 15 15)" />
                    </svg>
                    <svg width="30" height="30" class="dark:hidden">
                        <path
                        fill="currentColor"
                        d="
                        M 23, 5
                        A 12 12 0 1 0 23, 25
                        A 12 12 0 0 1 23, 5"
                        />
                    </svg>
                    </button>
                <li class="mx-2">
                    <a href="/resume-pablo-garcia-pernas.pdf" download="resume-pablo-garcia-pernas.pdf" class="text-red-500 hover:text-red-700 transition-transform duration-300 text-2xl font-semibold hover:italic focus:italic">
                        Resume
                    </a>
                </li>
            </ul>
        </nav>
    </div>

</header>

<script>
    const header = document.querySelector('header')
    if (header)
        window.addEventListener('scroll', () => {
            if (window.scrollY > 10) {
                header.classList.add('bg-white', 'backdrop-blur','shadow-md', 'dark:bg-gray-900', 'dark:backdrop-blur', 'dark:shadow-md')
            } else {
                header.classList.remove('bg-white', 'backdrop-blur','shadow-md', 'dark:bg-gray-900', 'dark:backdrop-blur', 'dark:shadow-md')
            }
        })
</script>

<script>
    document.getElementById('theme-selector')?.addEventListener('click', () => {
    if (localStorage.theme === 'dark') {
      localStorage.theme = 'light';
      document.documentElement.classList.remove('dark');
    } else {
      localStorage.theme = 'dark';
      document.documentElement.classList.add('dark');
    }
  });
</script>

<style>
    header {
        align-items:center;
    }
    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    nav ul li a:hover{
        font-weight: bold;
    }

    h1 {
        animation: typing 2s ,cursor .4s step-end infinite alternate;
        padding-right: 5px;
        border-right: 2px solid black;
        white-space: nowrap;
        width: 100%;
        overflow:hidden;
    }
    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }
    @keyframes cursor {
        50% {
            border-color: transparent;
        }
    }

    #theme-selector {
        transition: transform 1s ease-in-out;
    }
    #theme-selector:hover {
        transform: rotate(360deg);
    }
    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

</style>