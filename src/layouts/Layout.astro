---
import '@styles/global.css'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<script>
			if(localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}			
		</script>
		<title>Homepage - Pablo Garc√≠a</title>
	</head>
	<body class="dark:bg-gray-900 dark:text-gray-200">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Roboto Condensed', sans-serif;
		animation: fadeIn 0.5s ease-out;
		transition: background-color 0.4s, color 0.4s;
	}
	@keyframes fadeIn {
		from {
			opacity: 0.75;
		}
		to {
			opacity: 1;
		}
	}

</style>

<style>
	:root {
		--border-color: black;
	}

	.dark {
		--border-color: white;
	}
</style>
